{
    "coc.preferences.extensionUpdateCheck": "daily",
    "suggest.noselect": true,
    "suggest.enablePreselect": false,
    "suggest.enablePreview": true,
    "codeLens.enable": true,
    "coc.preferences.colorSupport": true,
    "coc.preferences.formatOnSaveFiletypes": [
        "json"
    ],
    "snippets.ultisnips.directories": [
        "UltiSnips",
        "$HOME/.vim/plugged/vim-snippets/UltiSnips",
        "$HOME/.vim/plugged/vim-snippets/snippets",
        "$HOME/.config/nvim/snippets/"
    ],
    "pairs.disableLanguages": [
        "lisp"
    ],
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "cuda",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls-root",
                "compile_commands.json"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/home/lizqwer/ccls-cache/"
                },
                "client": {
                    "snippetSupport": true
                }
            }
        },
        "golang": {
            "command": "/usr/bin/gopls",
            "args": [
                "serve",
                "-debug",
                "0.0.0.0:8484",
                "-rpc.trace"
            ],
            "rootPatterns": [
                "go.mod"
            ],
            "disableWorkspaceFolders": true,
            "filetypes": [
                "go"
            ]
        },
        "lua": {
            "command": "/home/lizqwer/.local/src/lua-language-server/bin/Linux/lua-language-server",
            "args": [
                "-E",
                "-e",
                "LANG='zh=cn'",
                "/home/lizqwer/.local/src/lua-language-server/main.lua"
            ],
            "filetypes": [
                "lua"
            ]
        },
        "haskell": {
            "command": "haskell-language-server-wrapper",
            "args": [
                "--lsp"
            ],
            "rootPatterns": [
                "*.cabal",
                "stack.yaml",
                "cabal.project",
                "package.yaml"
            ],
            "filetypes": [
                "haskell",
                "lhaskell"
            ]
        }
    }
}
